<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Ajout des couleurs dans la vue liste des variantes de produits -->
    <record id="product_product_tree_view_inherit_is_bois39" model="ir.ui.view">
        <field name="name">product.product.list.inherit.is.bois39</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_product_tree_view"/>
        <field name="arch" type="xml">
            <field name="product_template_variant_value_ids" position="attributes">
                <attribute name="options">{'color_field': 'color'}</attribute>
            </field>
        </field>
    </record>

    <!-- Ajout des couleurs dans la vue formulaire des variantes de produits -->
    <record id="product_normal_form_view_inherit_is_bois39" model="ir.ui.view">
        <field name="name">product.product.form.inherit.is.bois39</field>
        <field name="model">product.product</field>
        <field name="inherit_id" ref="product.product_normal_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='product_template_variant_value_ids']" position="attributes">
                <attribute name="options">{'color_field': 'color'}</attribute>
            </xpath>
        </field>
    </record>

    <!-- Vue améliorée pour gérer les couleurs des valeurs d'attributs -->
    <record id="product_attribute_view_form_inherit_is_bois39" model="ir.ui.view">
        <field name="name">product.attribute.form.inherit.is.bois39</field>
        <field name="model">product.attribute</field>
        <field name="inherit_id" ref="product.product_attribute_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='value_ids']//list//field[@name='name']" position="after">
                <field name="color" widget="color_picker"/>
            </xpath>
        </field>
    </record>

</odoo>
